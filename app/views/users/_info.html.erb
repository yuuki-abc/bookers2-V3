<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= user.follower.count %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= user.followed.count %></th>
  </tr>
  <% unless user == current_user %>
  <tr>
	  <% if user.followed.pluck(:follower_id).include?(current_user.id) %><!--要検証-->
      <td><%= link_to 'フォローを外す', user_relationships_path(user), method: :delete %></td>
    <% else %>
      <td><%= link_to 'フォローをする', user_relationships_path(user), method: :post %></td>
    <% end %>
  </tr>
  <% end %>
</table>
<!--要検証 ボタンにする-->
<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>