<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>follows</h2>
      <!--ここから-->
      <% users = @user.followed %>
      <% users.each do |user| %>
        <%= user.follower.name %>
      <% end %>
      <!--ここまで-->
    </div>
  </div>
</div>
